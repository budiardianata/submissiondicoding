<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Setting Aplikasi">
        <ListPreference
            android:icon="@drawable/ic_theme"
            app:key="themePref"
            app:title="Tema"
            app:defaultValue="default"
            app:dialogTitle="Pilih Tema"
            app:entries="@array/themeListArray"
            app:entryValues="@array/themeEntryArray"
            app:useSimpleSummaryProvider="true"/>
        <ListPreference
            android:icon="@drawable/ic_list"
            app:key="layoutPref"
            app:title="Tampilan Home"
            app:defaultValue="1"
            app:dialogTitle="Pilih Tampilan"
            app:entries="@array/layout"
            app:entryValues="@array/layoutEntryArray"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>

